    <sql id="selectBusiExtraWorkVo">
        select
        extra_work_id,
        user_id,
        extra_work_hours,
        extra_work_dates,
        extra_work_Reason,
        dept_Id,
        extra_work_Prj_Name,
        in_prj_flag,
        overtime_sur_time,
        create_by, create_Time, update_by, update_Time, remark from busi_extra_work
    </sql>

    <select id="selectBusiExtraWorkList" parameterType="com.xhkj.project.business.domain.BusiExtraWork" resultType="com.xhkj.project.business.domain.BusiExtraWork">
