            <if test="leaveEndTime != null  and leaveEndTime != ''">leave_end_time = #{leaveEndTime},</if>
            leave_prj_name = #{leavePrjName},
            in_prj_flag = #{inPrjFlag},
        </trim>
        where leave_id = #{leaveId}
